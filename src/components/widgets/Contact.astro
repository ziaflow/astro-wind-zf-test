---
import FormContainer from '~/components/ui/Form.astro';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Contact as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  inputs,
  textarea,
  disclaimer,
  button,
  description,
  accessKey = import.meta.env.WEB3FORMS_ACCESS_KEY,
  redirect,
  subject = 'New Contact Request',
  fromName = 'ZiaFlow Website',

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props as Props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  {
    inputs && (
      <div
        class="flex flex-col w-full h-full rounded-3xl border border-white/40 bg-white/80 shadow-xl backdrop-blur p-6 sm:p-8 dark:bg-slate-900/80 dark:border-slate-800"
      >
        <FormContainer
          inputs={inputs}
          textarea={textarea}
          disclaimer={disclaimer}
          button={button}
          description={description}
          accessKey={accessKey}
          redirect={redirect}
          subject={subject}
          fromName={fromName}
        />
      </div>
    )
  }
</WidgetWrapper>
