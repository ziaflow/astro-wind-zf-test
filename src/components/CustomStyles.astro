---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: #a22a36;
    --aw-color-secondary: #7c1e29;
    --aw-color-accent: #3f9b93;

    --aw-color-text-heading: #000000;
    --aw-color-text-default: #1a1a1a;
    --aw-color-text-muted: #4b5563;
    --aw-color-bg-page: #ffffff;

    --aw-color-bg-page-dark: #020617;

    ::selection {
      background-color: #fee2e2;
    }
  }

  /* Force light theme styles if needed, but keeping .dark for reference */
  .dark {
    --aw-color-text-heading: #f8fafc;
    --aw-color-text-default: #e2e8f0;
    --aw-color-text-muted: #e2e8f0a6;
    --aw-color-bg-page: #020617;
  }

  .digital-gradient-text,
  .highlight {
    background-image: linear-gradient(90deg, #a22a36 0%, #7c1e29 50%, #3f9b93 100%);
    color: transparent;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    display: inline-block;
  }
</style>
