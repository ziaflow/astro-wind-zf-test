---
import { GoogleAnalytics } from '@astrolib/analytics';
import { ANALYTICS } from 'astrowind:config';
---

{
  /* Google Tag Manager (Head) */
  ANALYTICS?.vendors?.googleTagManager?.id ? (
    <script is:inline>
      (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?('&l='+l):'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer',String(ANALYTICS.vendors.googleTagManager.id));
    </script>
  ) : null
}

{
  /* Microsoft Clarity (optional) */
  ANALYTICS?.vendors?.clarity?.id ? (
    <script is:inline>
      (function(c,l,a,r,i,t,y){
        c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
        t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
        y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
      })(window, document, "clarity", "script", String(ANALYTICS.vendors.clarity.id));
    </script>
  ) : null
}

{
  /* Google Analytics (legacy via astrolib) */
  ANALYTICS?.vendors?.googleAnalytics?.id ? (
    <GoogleAnalytics
      id={String(ANALYTICS.vendors.googleAnalytics.id)}
      partytown={ANALYTICS?.vendors?.googleAnalytics?.partytown}
    />
  ) : null
}
