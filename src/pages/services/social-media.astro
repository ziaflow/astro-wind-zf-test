---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import ServiceSchema from '~/components/seo/ServiceSchema.astro';

const metadata = {
  title: 'Social Media Marketing | ZiaFlow',
  description: 'Strategic social media management that builds trust and drives revenue.',
};

const serviceData = {
  name: 'Social Media Marketing',
  description:
    'Strategic social media management that builds trust and drives revenue through organic content and paid campaigns.',
  url: 'https://ziaflow.com/services/social-media',
  image: 'https://ziaflow.com/assets/images/social-hero.jpg',
};
---

<Layout metadata={metadata}>
  <ServiceSchema {...serviceData} />

  <Hero
    tagline="Social Media Marketing"
    title="Strategic Asset Building"
    subtitle="We move beyond vanity metrics like 'likes' to focus on engagement that drives revenue. Our approach combines organic content strategies that establish your brandâ€™s authority with targeted paid social campaigns to accelerate reach. We build a consistent digital presence that builds trust (Stability) while utilizing social platforms as a direct channel for customer acquisition."
    actions={[{ variant: 'primary', text: 'Book Consultation', href: '/contact', icon: 'tabler:calendar' }]}
  />

  <Features
    title="Our Approach"
    items={[
      {
        title: 'Revenue-Focused Strategy',
        description: 'We focus on metrics that matter: leads, sales, and ROI.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Organic Authority',
        description: 'Build long-term trust with high-quality, relevant content.',
        icon: 'tabler:brand-instagram',
      },
      {
        title: 'Paid Acceleration',
        description: 'Amplify your reach with targeted ad campaigns.',
        icon: 'tabler:ad',
      },
    ]}
  />

  <CallToAction
    title="Ready to build your brand?"
    actions={[{ variant: 'primary', text: 'Contact Us', href: '/contact' }]}
  />
</Layout>
