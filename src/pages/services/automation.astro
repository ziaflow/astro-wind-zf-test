---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import ServiceSchema from '~/components/seo/ServiceSchema.astro';

const metadata = {
  title: 'Automation & AI Services | ZiaFlow',
  description: 'Deploy intelligent AI agents and workflow automation to nurture leads 24/7.',
};

const serviceData = {
  name: 'Marketing Automation & AI',
  description:
    'Deploy intelligent AI agents and workflow automation to nurture leads 24/7. Replace manual chaos with engineered efficiency.',
  url: 'https://ziaflow.com/services/automation',
  image: 'https://ziaflow.com/assets/images/automation-hero.jpg',
};
---

<Layout metadata={metadata}>
  <ServiceSchema {...serviceData} />

  <Hero
    tagline="Automation & AI"
    title="The Automation Layer"
    subtitle="Stop losing revenue to slow response times. We deploy intelligent AI agents and workflow automation to nurture leads 24/7, ensuring no opportunity slips through the cracks. From instant SMS booking confirmations to backend CRM routing, we replace manual chaos with engineered efficiency. This isn't just about saving time; it's about building an intake system that scales without adding headcount."
    actions={[
      {
        variant: 'primary',
        text: 'Book Consultation',
        href: 'https://outlook.office.com/book/ZiaFlowIntake@ziaflow.com/?ismsaljsauthenabled',
        icon: 'tabler:calendar',
      },
    ]}
  />

  <Features
    title="Key Benefits"
    items={[
      {
        title: '24/7 Lead Nurturing',
        description: 'Never miss a lead with always-on AI agents that respond instantly.',
        icon: 'tabler:clock-24',
      },
      {
        title: 'Workflow Automation',
        description: 'Streamline your operations by automating repetitive tasks and data entry.',
        icon: 'tabler:settings-automation',
      },
      {
        title: 'CRM Integration',
        description: 'Seamlessly sync data between your marketing channels and CRM.',
        icon: 'tabler:database-import',
      },
    ]}
  />

  <CallToAction
    title="Ready to automate your growth?"
    actions={[
      {
        variant: 'primary',
        text: 'Book Consultation',
        href: 'https://outlook.office.com/book/ZiaFlowIntake@ziaflow.com/?ismsaljsauthenabled',
      },
    ]}
  />
</Layout>
