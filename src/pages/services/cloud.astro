---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Cloud Solutions & Hosting | ZiaFlow',
  description: 'Secure, scalable cloud environments on Azure and AWS.',
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="Cloud Solutions"
    title="Enterprise-Grade Infrastructure"
    subtitle="As a Microsoft Partner, we don't just host websites; we architect secure, scalable cloud environments on Azure and AWS. Whether you need database migration, secure application hosting, or compliance-focused storage (HIPAA), we build the digital foundation that ensures your business stays online, secure, and ready to scale."
    actions={[{ variant: 'primary', text: 'Book Consultation', href: '/contact', icon: 'tabler:calendar' }]}
  />

  <Features
    title="Our Expertise"
    items={[
      {
        title: 'Azure & AWS Architects',
        description: 'Certified experts designing robust cloud infrastructure.',
        icon: 'tabler:cloud',
      },
      {
        title: 'Secure Migration',
        description: 'Move your data and applications safely to the cloud.',
        icon: 'tabler:arrow-big-up-lines',
      },
      {
        title: 'Compliance & Security',
        description: 'HIPAA and SOC2 compliant configurations for sensitive data.',
        icon: 'tabler:lock-check',
      },
    ]}
  />

  <CallToAction title="Ready to migrate?" actions={[{ variant: 'primary', text: 'Contact Us', href: '/contact' }]} />
</Layout>
