---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About ZiaFlow - Digital Transformation Partners',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="About ZiaFlow"
    image={{
      src: 'https://images.unsplash.com/photo-1522071820081-009f0129c71c?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Team collaboration',
    }}
  >
    <Fragment slot="title">
      Empowering businesses through <br />
      <span class="digital-gradient-text">Digital Transformation</span>
    </Fragment>

    <Fragment slot="subtitle">
      <div class="max-w-3xl mx-auto text-xl text-muted mb-6 dark:text-slate-300">
        Based in the Greater Phoenix Area, our mission is to unlock potential and foster growth for small to
        medium-sized businesses through innovative solutions. We combine technical expertise with a deep understanding
        of our clients' industries, creating solutions that are not only technologically advanced but also aligned with
        their business objectives.
      </div>
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->
  <Stats
    title="Our Impact"
    stats={[
      { title: 'Hours Saved', amount: '10K+' },
      { title: 'Happy Clients', amount: '50+' },
      { title: 'Projects Delivered', amount: '100+' },
      { title: 'Years Experience', amount: '7+' },
    ]}
  />

  <!-- Features3 Widget ************** -->
  <Features3
    title="What We Do"
    subtitle="We deliver comprehensive digital solutions that transform how businesses operate, market, and grow."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Custom Development',
        description:
          'We build responsive, scalable web and mobile applications tailored to your unique business needs. From concept to deployment, we create digital experiences that drive results.',
        icon: 'tabler:code',
      },
      {
        title: 'SEO & PPC Marketing',
        description:
          'Our data-driven approach to search engine optimization and paid advertising maximizes your visibility and ROI across Google, Microsoft, Meta, and more.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Workflow Automation',
        description:
          'We eliminate repetitive tasks and streamline operations with custom automation solutions that save time, reduce errors, and boost productivity.',
        icon: 'tabler:robot',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->
  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'CRM & ERP Solutions',
        description:
          'Centralize your customer data and optimize business processes with customized CRM and ERP implementations designed for your workflows.',
        icon: 'tabler:database',
      },
      {
        title: 'Marketing Automation',
        description:
          'Streamline lead nurturing, customer communication, and campaign management with intelligent automation that scales your marketing efforts.',
        icon: 'tabler:mail-forward',
      },
      {
        title: 'Strategic Consulting',
        description:
          'We serve as trusted advisors, helping you navigate digital transformation with strategic guidance aligned to your business goals and industry challenges.',
        icon: 'tabler:bulb',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&auto=format&fit=crop&w=1740&q=80',
      alt: 'Business analytics',
    }}
  />

  <!-- Steps2 Widget ****************** -->
  <Steps2
    title="Our Core Values"
    subtitle="These principles guide every decision we make and every solution we deliver."
    items={[
      {
        title: 'Customer Success First',
        description:
          'Your success is our priority. We go beyond the dollar amount to build lasting relationships, exceed expectations, and deliver solutions that truly move your business forward.',
      },
      {
        title: 'Technical Excellence',
        description:
          'We combine deep technical expertise with creativity and innovation. Our team stays current with emerging technologies to deliver cutting-edge solutions that stand the test of time.',
      },
      {
        title: 'Transparency & Integrity',
        description:
          'We believe in honest communication and clear timelines. No black magic BS - just skilled professionals who know what they are doing and deliver what they promise.',
      },
      {
        title: 'Industry Understanding',
        description:
          'We take the time to understand your unique business challenges and industry dynamics. This allows us to create solutions that align with your objectives, not just deploy technology.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->
  <Steps2
    title="Why Clients Choose Us"
    subtitle="Our approach is different - we combine technical mastery with genuine care for your business outcomes."
    isReversed={true}
    items={[
      {
        title: 'Results That Speak',
        description:
          'Our work transforms operations, saves countless hours, and drives measurable business growth. We do not just build - we deliver outcomes.',
        icon: 'tabler:trophy',
      },
      {
        title: 'Responsive & Reliable',
        description:
          'Available when you need us, even for early morning or late night questions. We are invested in your success and act like true partners, not just vendors.',
        icon: 'tabler:headset',
      },
      {
        title: 'Affordable for Growing Businesses',
        description:
          'Enterprise-quality solutions at prices that make sense for startups and small businesses. We help you compete with larger competitors without breaking the bank.',
        icon: 'tabler:coin',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->
  <Features2
    title="Where We Work"
    tagline="Serving Clients Locally and Beyond"
    columns={2}
    items={[
      {
        title: 'Phoenix, Arizona',
        description:
          'Headquartered in the Greater Phoenix Area, serving local businesses with personalized service and deep community connections.',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Nationwide Reach',
        description:
          'While based in Phoenix, we serve clients across the United States with remote collaboration and proven digital delivery processes.',
        icon: 'tabler:world',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->
  <Features2
    title="Get In Touch"
    tagline="Let's Talk About Your Project"
    columns={2}
    items={[
      {
        title: 'Schedule a Consultation',
        description:
          'Ready to transform your business? Book a free consultation to discuss your challenges, goals, and how we can help you achieve them.',
        icon: 'tabler:calendar',
        callToAction: {
          text: 'Book Consultation',
          href: 'https://outlook.office.com/book/ZiaFlowIntake@ziaflow.com/?ismsaljsauthenabled',
        },
      },
      {
        title: 'Ongoing Support',
        description:
          'Current client? We are here to support you with responsive service, optimization recommendations, and continuous improvement of your solutions.',
        icon: 'tabler:lifebuoy',
      },
    ]}
  />
  <!-- JSON-LD Schema -->
  <script
    is:inline
    type="application/ld+json"
    set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Organization',
      name: 'ZiaFlow',
      url: 'https://www.ziaflow.com',
      logo: 'https://ziaflow.com/logo.png',
      contactPoint: {
        '@type': 'ContactPoint',
        telephone: '(480) 819-29292',
        contactType: 'customer service',
        areaServed: 'US',
        availableLanguage: 'en',
      },
      sameAs: ['https://www.linkedin.com/company/ziaflow', 'https://www.facebook.com/ziaflow'],
      address: {
        '@type': 'PostalAddress',
        addressLocality: 'Phoenix',
        addressRegion: 'AZ',
        postalCode: '85023',
        addressCountry: 'US',
      },
    })}
  />
</Layout>
