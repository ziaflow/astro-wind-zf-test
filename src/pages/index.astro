---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Brands from '~/components/widgets/Brands.astro';

const metadata = {
  title: 'Phoenix Marketing Agency & Web Development | ZiaFlow',
  description: 'Accelerate growth with SEO, automation, PPC, and custom web development. Based in Phoenix, AZ. Certified Microsoft & TikTok Partner. Get your free strategy session!',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
 <!-- Hero Widget ******************* -->

  <Hero
    tagline="Phoenix Marketing Agency & Web Development"
    image={{
      src: 'https://images.unsplash.com/photo-1522071820081-009f0129c71c?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Team collaboration',
    }}
    title="Accelerate Your Growth with ZiaFlow"
    subtitle="ROI-driven SEO, automation, PPC, and custom web solutions—trusted by 120+ Arizona businesses."
    actions={[
      {
        variant: 'primary',
        text: 'Get My Free Strategy Session', 
        icon: 'tabler:square-rounded-arrow-right',
        href: 'https://outlook.office.com/book/ZiaFlowIntake@ziaflow.com/?ismsaljsauthenabled',
      },
      {
        variant: 'secondary',
        text: 'Learn More',
        href: 'About-Us',
      },
    ]}
  >
    <Fragment slot="subtitle">
      <span class="font-semibold">240% Avg. Traffic Growth</span> · <span class="font-semibold">Microsoft & TikTok Partner</span> · <span class="font-semibold">E-commerce + Home Services</span>
    </Fragment>
  </Hero>

  <!-- Features2 Widget ************** -->

  <Features2
    title="About us"
    subtitle="We believe in the magic of turning dreams into stunning realities. Founded by passionate developers with a shared vision, we set out to simplify the website creation process. Our templates bring together the innovation of Astro 5.0 and the versatility of Tailwind CSS, enabling you to express your unique brand identity like never before."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  {/* Trust & Stats Bar */}
  <Stats
    stats={[
      { title: 'Businesses helped', amount: '115+' },
      { title: 'Average Growth', amount: '240%' },
      { title: 'Google Reviews', amount: '5★' },
      { title: 'Client Revenue', amount: '$12M+' },
    ]}
    tagline="Trusted by Arizona’s Leading Brands"
  />
  <Brands
    title="Partnerships & Collaborations"
    subtitle="At Astrowind, we believe in the power of collaboration to drive innovation and create exceptional experiences."
    icons={[]}
    images={[
      {
        src: 'https://cdn.pixabay.com/photo/2015/05/26/09/37/paypal-784404_1280.png',
        alt: 'Paypal',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2021/12/06/13/48/visa-6850402_1280.png',
        alt: 'Visa',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/10/01/10/29/ebay-189064_1280.png',
        alt: 'Ebay',
      },

      {
        src: 'https://cdn.pixabay.com/photo/2015/04/13/17/45/icon-720944_1280.png',
        alt: 'Youtube',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/02/12/09/07/microsoft-80658_1280.png',
        alt: 'Microsoft',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2015/04/23/17/41/node-js-736399_1280.png',
        alt: 'Node JS',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2015/10/31/12/54/google-1015751_1280.png',
        alt: 'Google',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2021/12/06/13/45/meta-6850393_1280.png',
        alt: 'Meta',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/01/29/22/53/yahoo-76684_1280.png',
        alt: 'Yahoo',
      },
    ]}
  />

  {/* Testimonials Widget *********** */}
  <Testimonials
    title="What our clients say"
    testimonials={[
      {
        testimonial:
          'ZiaFlow has transformed our business with their automation solutions. Their tailored approach and expertise have streamlined our processes, saving us time and boosting our productivity. Highly recommend!',
        name: 'Kyle B.',
        job: 'COO',
      },
      {
        testimonial:
          'When it comes to website building and SEO, Ziaflow is very knowledgeable and extremely efficient. They helped me and some of my clients with website consulting and optimization. They are very affordable for small businesses that are growing and startups that need to get a head start.',
        name: 'S.K.',
        job: 'CFO',
      },
      {
        testimonial:
          'I had made a FB post about needing help and this guy in my neighborhood reached out. Come to find out ZiaFlow came through with the clutch performance. They talked me through my issues and reassured me it will all work out. They are true to their word, which speaks volume to me. Thanks, I will be referring you all out.',
        name: 'Richard J.',
        job: 'Owner',
      },
    ]}
    callToAction={{
      target: '_blank',
      text: 'Read more testimonials',
      href: '#',
      icon: 'tabler:chevron-right',
    }}
  />
<ContactUs
    id="form"
    title="Start Your Digital Transformation"
    subtitle="Tell us about your project and we will get back to you within 24 hours. Whether you need custom development, automation, or marketing solutions, our team is ready to help."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Full Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Company',
      },
      {
        type: 'text',
        name: 'phone',
        label: 'Phone',
      },
    ]}
    textarea={{
      label: 'Tell us about your project',
      placeholder: 'What challenges are you facing? What are your goals? The more details you provide, the better we can help.',
    }}
    disclaimer={{
      label:
        'By submitting this form, you agree to our privacy policy. We will never share your information with third parties.',
    }}
    description="Our team typically responds within 24 hours, often sooner. For urgent inquiries, please call or email directly."
  />

  {/* Service Grid */}
  <Features
    id="services"
    tagline="Expert Digital Marketing & Web Development"
    title="Our Core Services"
    subtitle="Grow faster with SEO, web development, PPC, automation, and e-commerce solutions."
    items={[
      {
        title: 'Phoenix SEO Services',
        description: 'Rank #1 on Google, drive more local traffic, and book more jobs.',
        icon: 'tabler:search',
      },
      {
        title: 'Custom Web Development',
        description: 'Conversion-focused websites for mobile and desktop—built for Phoenix and beyond.',
        icon: 'tabler:devices-pc',
      },
      {
        title: 'PPC Management',
        description: 'Maximize ROI on Google, Bing, Facebook, and TikTok Ads.',
        icon: 'tabler:ad',
      },
      {
        title: 'Marketing Automation',
        description: 'Automate email, CRM, and review requests to save time and grow sales.',
        icon: 'tabler:mail-forward',
      },
      {
        title: 'E-commerce Solutions',
        description: 'Shopify, WooCommerce, and custom platforms for serious online growth.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'SaaS & Workflow Automation',
        description: 'Streamline your business with tailored automation and SaaS workflows.',
        icon: 'tabler:arrows-shuffle',
      },
    ]}
  />

  {/* Case Studies Preview */}
  <Content
    isReversed
    tagline="Proven Results"
    title="Real Outcomes for Arizona Businesses"
    items={[
      {
        title: 'Scottsdale Plumbing',
        description: '210% more leads in 3 months via local SEO.',
      },
      {
        title: 'Tempe Fashion Boutique',
        description: 'Doubled online sales with web redesign & automation.',
      },
      {
        title: 'Mesa Home Services',
        description: 'Automated review generation for 50+ new 5-star reviews.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1556740749-887f6717d7e4?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80',
      alt: 'Growth chart and case study results',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight sm:text-3xl mb-2">Results That Matter</h3>
      <p>See how ZiaFlow has transformed home services, e-commerce, and B2B firms across Arizona.</p>
    </Fragment>
  </Content>

  {/* Testimonials */}
  <Note
    description={`"Book Now" — Jane D., Scottsdale HVAC ★★★★★`}
  />

  {/* Why ZiaFlow / Differentiators */}
  <Features2
    title="Why Choose ZiaFlow?"
    subtitle="Local expertise, national results—strategies for e-commerce, home services, and B2B."
    tagline="The ZiaFlow Difference"
    items={[
      { title: 'Microsoft/TikTok Partner', description: 'Certified, cutting-edge campaigns.' },
      { title: 'Phoenix-Based Team', description: 'Real local experts serving Arizona.' },
      { title: 'Proven Track Record', description: 'Consistent results that drive business success.' },
      { title: 'Results-Driven', description: 'ROI-focused strategies, visible outcomes.' },
      { title: 'Full-Stack Solutions', description: 'From web dev to automation, we cover all bases.' },
      { title: 'Transparent Communication', description: 'Regular reporting and dedicated support.' },
    ]}
  />

  {/* Call-to-Action */}
  <CallToAction
    title="Ready to Grow Your Business?"
    subtitle="Book your free strategy session and discover how ZiaFlow delivers better SEO, web development, and automation for Phoenix-area companies."
    actions={[
      { variant: 'primary', text: 'Request Consultation', href: 'https://outlook.office.com/book/ZiaFlowIntake@ziaflow.com/?ismsaljsauthenabled' },
      { variant: 'secondary', text: 'Explore Services', href: 'services' },
    ]}
  />
    {/* FAQs */}
  <FAQs
    title="Frequently Asked Questions"
    subtitle="Everything you need to know before working with ZiaFlow."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'What industries do you specialize in?',
        description: 'Home services, e-commerce, B2B, professional services, & more—see our case studies for details.',
      },
      {
        title: 'How long until I see results?',
        description: 'Most clients see measurable growth in 30-90 days, depending on campaign and goals.',
      },
      {
        title: 'Do you help with Google reviews?',
        description: 'Yes! Our automation campaigns help clients earn 5-star reviews fast.',
      },
      {
        title: 'Is ZiaFlow certified?',
        description: 'We are certified partners with Microsoft, TikTok, and multiple major platforms.',
      },
      {
        title: 'What makes you the top Phoenix marketing agency?',
        description: 'Proven outcomes, transparent reporting, and a dedicated, local team.',
      },
      {
        title: 'Do you offer free consultations?',
        description: 'Absolutely. Every engagement starts with a free strategy session and audit.',
      },
    ]}
  />
{/* Blog & Insights */}
  <BlogLatestPosts
    title="Digital Marketing Insights"
    information="Latest tips on SEO, automation, lead generation, and local business growth in Phoenix."
  />
</Layout>
