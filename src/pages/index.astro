---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';

const metadata = {
  title: 'Phoenix Marketing Agency & Web Development | ZiaFlow',
  description: 'Accelerate growth with SEO, automation, PPC, and custom web development. Based in Phoenix, AZ. Certified Microsoft & TikTok Partner. Get your free strategy session!',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  {/* Hero Section */}
  <Hero
    tagline="Phoenix Marketing Agency & Web Development"
    title="Accelerate Your Growth with ZiaFlow"
    subtitle="ROI-driven SEO, automation, PPC, and custom web solutions—trusted by 120+ Arizona businesses."
    actions={[
      {
        variant: 'primary',
        text: 'Get My Free Strategy Session',
        href: '#contact',
      },
      {
        variant: 'secondary',
        text: 'See Our Case Studies',
        href: '#case-studies',
      },
    ]}
  >
    <Fragment slot="subtitle">
      <span class="font-semibold">240% Avg. Traffic Growth</span> · <span class="font-semibold">Microsoft & TikTok Partner</span> · <span class="font-semibold">E-commerce + Home Services</span>
    </Fragment>
  </Hero>

  {/* Trust & Stats Bar */}
  <Stats
    stats={[
      { title: 'Businesses helped', amount: '120+' },
      { title: 'Average Growth', amount: '240%' },
      { title: 'Google Reviews', amount: '4.9★' },
      { title: 'Client Revenue', amount: '$12M+' },
      { title: 'Certified Partner', amount: 'Microsoft',},
    ]}
    tagline="Trusted by Arizona’s Leading Brands"
  />

  {/* Testimonials Widget *********** */}
  <Testimonials
    title="What our clients say"
    testimonials={[
      {
        testimonial:
          'The service or product I received from ZiaFlow was top-notch. It’s clear they really care about quality and putting their best foot forward. I appreciated the little touches that made the experience feel personal and tailored just for me. It’s not every day you come across a team that’s so dedicated and passionate about what they do.',
        name: 'S.D.',
        job: 'Owner',
      },
      {
        testimonial:
          'When it comes to website building and SEO, Ziaflow is very knowledgeable and extremely efficient. They helped me and some of my clients with website consulting and optimization. They are very affordable for small businesses that are growing and startups that need to get a head start.',
        name: 'S.K.',
        job: 'CFO',
      },
    ]}
    callToAction={{
      target: '_blank',
      text: 'Read more testimonials',
      href: '#',
      icon: 'tabler:chevron-right',
    }}
  />

  {/* Service Grid */}
  <Features
    id="services"
    tagline="Expert Digital Marketing & Web Development"
    title="Our Core Services"
    subtitle="Grow faster with SEO, web development, PPC, automation, and e-commerce solutions."
    items={[
      {
        title: 'Phoenix SEO Services',
        description: 'Rank #1 on Google, drive more local traffic, and book more jobs.',
        icon: 'tabler:search',
      },
      {
        title: 'Custom Web Development',
        description: 'Conversion-focused websites for mobile and desktop—built for Phoenix and beyond.',
        icon: 'tabler:devices-pc',
      },
      {
        title: 'PPC Management',
        description: 'Maximize ROI on Google, Bing, Facebook, and TikTok Ads.',
        icon: 'tabler:ad',
      },
      {
        title: 'Marketing Automation',
        description: 'Automate email, CRM, and review requests to save time and grow sales.',
        icon: 'tabler:mail-forward',
      },
      {
        title: 'E-commerce Solutions',
        description: 'Shopify, WooCommerce, and custom platforms for serious online growth.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'SaaS & Workflow Automation',
        description: 'Streamline your business with tailored automation and SaaS workflows.',
        icon: 'tabler:arrows-shuffle',
      },
    ]}
  />

  {/* Case Studies Preview */}
  <Content
    isReversed
    tagline="Proven Results"
    title="Real Outcomes for Arizona Businesses"
    items={[
      {
        title: 'Scottsdale Plumbing',
        description: '210% more leads in 3 months via local SEO.',
      },
      {
        title: 'Tempe Fashion Boutique',
        description: 'Doubled online sales with web redesign & automation.',
      },
      {
        title: 'Mesa Home Services',
        description: 'Automated review generation for 50+ new 5-star reviews.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1556740749-887f6717d7e4?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80',
      alt: 'Growth chart and case study results',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight sm:text-3xl mb-2">Results That Matter</h3>
      <p>See how ZiaFlow has transformed home services, e-commerce, and B2B firms across Arizona.</p>
    </Fragment>
  </Content>

  {/* Testimonials */}
  <Note
    description={`"Book Now" — Jane D., Scottsdale HVAC ★★★★★`}
  />

  {/* Why ZiaFlow / Differentiators */}
  <Features2
    title="Why Choose ZiaFlow?"
    subtitle="Local expertise, national results—strategies for e-commerce, home services, and B2B."
    tagline="The ZiaFlow Difference"
    items={[
      { title: 'Microsoft/TikTok Partner', description: 'Certified, cutting-edge campaigns.' },
      { title: 'Phoenix-Based Team', description: 'Real local experts serving Arizona.' },
      { title: 'Proven Track Record', description: 'Consistent results that drive business success.' },
      { title: 'Results-Driven', description: 'ROI-focused strategies, visible outcomes.' },
      { title: 'Full-Stack Solutions', description: 'From web dev to automation, we cover all bases.' },
      { title: 'Transparent Communication', description: 'Regular reporting and dedicated support.' },
    ]}
  />

  {/* Call-to-Action */}
  <CallToAction
    title="Ready to Grow Your Business?"
    subtitle="Book your free strategy session and discover how ZiaFlow delivers better SEO, web development, and automation for Phoenix-area companies."
    actions={[
      { variant: 'primary', text: 'Request Consultation', href: '#contact' },
      { variant: 'secondary', text: 'Explore Services', href: '#services' },
    ]}
  />
    {/* FAQs */}
  <FAQs
    title="Frequently Asked Questions"
    subtitle="Everything you need to know before working with ZiaFlow."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'What industries do you specialize in?',
        description: 'Home services, e-commerce, B2B, professional services, & more—see our case studies for details.',
      },
      {
        title: 'How long until I see results?',
        description: 'Most clients see measurable growth in 30-90 days, depending on campaign and goals.',
      },
      {
        title: 'Do you help with Google reviews?',
        description: 'Yes! Our automation campaigns help clients earn 5-star reviews fast.',
      },
      {
        title: 'Is ZiaFlow certified?',
        description: 'We are certified partners with Microsoft, TikTok, and multiple major platforms.',
      },
      {
        title: 'What makes you the top Phoenix marketing agency?',
        description: 'Proven outcomes, transparent reporting, and a dedicated, local team.',
      },
      {
        title: 'Do you offer free consultations?',
        description: 'Absolutely. Every engagement starts with a free strategy session and audit.',
      },
    ]}
  />
{/* Blog & Insights */}
  <BlogLatestPosts
    title="Digital Marketing Insights"
    information="Latest tips on SEO, automation, lead generation, and local business growth in Phoenix."
  />
</Layout>
